<Page x:Class="DiplomErshov.PageFolder.DirectorPageFolder.DirectorEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomErshov.PageFolder.DirectorPageFolder"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="649"
      MaxHeight="649"
      MinHeight="649"
      d:DesignWidth="824"
      MaxWidth="824"
      MinWidth="824"
      Title="DirectorEditPage">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="Редактирование сотрудника"
                   Style="{StaticResource LabelLogoStyle}"             
                   Grid.ColumnSpan="2"        
                   Grid.Column="0"
                   Grid.Row="0"/>

            <TextBox x:Name="LastNameTB"
                     Grid.Row="1"
                     Grid.Column="0"                    
                     Grid.ColumnSpan="2"
                     Margin="200 10 200 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding LastNameStaff}"/>

            <TextBox x:Name="FirstNameTB"
                     Grid.Row="2"
                     Grid.Column="0"                    
                     Grid.ColumnSpan="2"
                     Margin="200 10 200 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding FirstNameStaff}"/>

            <TextBox x:Name="MiddleNameTB"
                     Grid.Row="3"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Margin="200 10 200 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding MiddleNameStaff}"/>

            <TextBox x:Name="PhoneTB"
                     Grid.Row="4"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Margin="200 10 200 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding PhoneNumberStaff}"/>

            <TextBox x:Name="EmailTB"
                     Grid.Row="5"
                     Grid.Column="0"
                     Grid.ColumnSpan="2"
                     Margin="200 10 200 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding EmailStaff}"/>

            <ComboBox x:Name="UserCb"
                      Foreground="White"
                      BorderBrush="Black"
                      Background="Transparent"
                      BorderThickness="0 0 0 2"
                      Grid.Row="6"                  
                      Grid.Column="0"
                      Grid.ColumnSpan="2"
                      FontSize="18"
                      SelectedItem="{Binding User}"
                      DisplayMemberPath="LoginUser"
                      SelectedValuePath="IdUser"
                      Text="{Binding User.LoginUser}"
                      FontFamily="Arial"
                      Height="50"
                      Margin="200,0,200,0"/>

            <Button x:Name="SaveBtn"
                    Style="{StaticResource AuthButton}"
                    Content="Сохранить изменения"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="SaveBtn_Click" 
                    Grid.ColumnSpan="2"
                    Grid.Row="7"
                    Margin="228 10 228 10"/>

            <materialDesign:PackIcon x:Name="Back"
                                     Kind="ArrowBack"
                                     Style="{StaticResource MenuIcon}"
                                     Margin="5 10 10 10"
                                     MouseLeftButtonDown="Back_MouseLeftButtonDown"
                                     Height="50"
                                     Width="50"
                                     VerticalAlignment="Center"/>

        </Grid>
    </Border>
</Page>
