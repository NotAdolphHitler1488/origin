<Page x:Class="DiplomErshov.PageFolder.AdministratorPageFolder.AdministratorEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomErshov.PageFolder.AdministratorPageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="499"
      MaxHeight="499"
      MinHeight="499"
      d:DesignWidth="830"
      MaxWidth="830"
      MinWidth="830"
      Title="AdministratorEditPage">
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="Редактирование пользователя"
                   Style="{StaticResource LabelLogoStyle}"
                   Grid.ColumnSpan="2"
                   Grid.Column="0"
                   Grid.Row="0"/>

            <TextBox x:Name="LoginTB"
                     Grid.Row="2"
                     Grid.Column="0"
                     Margin="21 10 20 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding LoginUser}"/>

            <TextBox x:Name="PasswordTB"
                     Grid.Row="2"
                     Grid.Column="1"
                     Margin="20 10 21 10"
                     FontSize="18"
                     Style="{StaticResource TextBoxMenu}"
                     materialDesign:HintAssist.Foreground="White"
                     materialDesign:HintAssist.FontFamily="Arial"
                     BorderBrush="Black"
                     BorderThickness="2"
                     Text="{Binding PasswordUser}"/>

            <ComboBox x:Name="RoleCb"
                      Foreground="White"
                      BorderBrush="Black"
                      Background="Transparent"
                      BorderThickness="0 0 0 2"
                      Grid.Row="3"
                      Margin="228,0,228,0"
                      FontSize="18"
                      SelectedItem="{Binding Role}"
                      DisplayMemberPath="NameRole"
                      SelectedValuePath="IdRole"
                      Text="{Binding Role.NameRole}"
                      FontFamily="Arial"
                      Grid.ColumnSpan="2" Height="50"/>

            <Button x:Name="SaveBtn"
                    Style="{StaticResource AuthButton}"
                    Content="Сохранить изменения"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="SaveBtn_Click" 
                    Grid.ColumnSpan="2"
                    Grid.Row="5"
                    Margin="228 10 228 10"/>

            <materialDesign:PackIcon x:Name="Back"
                         Kind="ArrowBack"
                         Style="{StaticResource MenuIcon}"
                         Margin="5 10 10 10"
                         MouseLeftButtonDown="Back_MouseLeftButtonDown"
                         Height="50"
                         Width="50"
                         VerticalAlignment="Center"/>

        </Grid>
    </Border>
</Page>
